// –±–∏–±–ª–∏–æ—Ç–µ–∫–∞ –¥–ª—è —Ä–∞–±–æ—Ç—ã —Å–æ —Å—Ç–∞–Ω–¥–∞—Ä—Ç–Ω—ã–º–∏ –¥–ª–∏–Ω–∞–º–∏ –º–∞—Ç—á–µ–π
import { GameMode } from 'pixel_combats/room';

const PARAMETER_GAME_LENGTH = 'default_game_mode_length';

// –≤–æ–∑–≤—Ä–∞—â–∞–µ—Ç –¥–ª–∏–Ω—É –º–∞—Ç—á–∞ –≤ —Å–µ–∫—É–Ω–¥–∞—Ö
export function game_mode_length_seconds() {
    const length = GameMode.Parameters.GetString(PARAMETER_GAME_LENGTH);
    switch (length) {
        case 'Length_S': return 600;    // 10 –º–∏–Ω—É—Ç
        case 'Length_M': return 1200;   // 20 –º–∏–Ω—É—Ç
        case 'Length_L': return 1800;   // 30 –º–∏–Ω—É—Ç
        case 'Length_XL': return 3600;  // 60 –º–∏–Ω—É—Ç
        case 'Length_Infinite': return 0; // üí´ –±–µ—Å–∫–æ–Ω–µ—á–Ω–æ–µ –≤—Ä–µ–º—è
        default: return 1200;           // –ø–æ —É–º–æ–ª—á–∞–Ω–∏—é 20 –º–∏–Ω—É—Ç
    }
}
